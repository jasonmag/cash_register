<h1 class="text-2xl font-bold mb-6">Add New Product</h1>

<%= form_with model: @product, local: true, class: "space-y-6" do |form| %>
    <div>
        <%= form.label :product_code, class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= form.text_field :product_code, class: "block w-full border border-gray-300 rounded px-3 py-2" %>
    </div>

    <div>
        <%= form.label :name, class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= form.text_field :name, class: "block w-full border border-gray-300 rounded px-3 py-2" %>
    </div>

    <div>
        <%= form.label :price, class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= form.number_field :price, step: 0.01, class: "block w-full border border-gray-300 rounded px-3 py-2" %>
    </div>

    <div>
        <%= form.label :bogo, class: "inline-block text-sm font-medium text-gray-700" %>
        <%= form.check_box :bogo, class: "ml-2" %>
        <span class="text-sm text-gray-500">(Buy-One-Get-One-Free)</span>
    </div>

    <div class="mt-4">
        <%= form.label :bulk_quantity, "Bulk Quantity", class: "block text-sm font-medium text-gray-700" %>
        <%= form.number_field :bulk_quantity, class: "block w-full border rounded px-3 py-2" %>
    </div>

    <div class="mt-2">
        <%= form.label :bulk_price, "Bulk Price", class: "block text-sm font-medium text-gray-700" %>
        <%= form.number_field :bulk_price, step: 0.01, class: "block w-full border rounded px-3 py-2" %>
    </div>

    <div class="mt-4">
        <%= form.label :percent_discount, "Percent Discount (e.g. 33 for 33%)", class: "block text-sm font-medium text-gray-700" %>
        <%= form.number_field :percent_discount, step: 0.1, class: "block w-full border rounded px-3 py-2" %>
    </div>

    <div>
        <%= form.submit "Create Product", class: "bg-green-600 hover:bg-green-700 text-white font-semibold py-2 px-4 rounded" %>
    </div>
<% end %>

<%= link_to "Back to Products", root_path, class: "text-blue-500 hover:underline mt-6 inline-block" %>
